# =============================================================================
# Environment Variables for Dialer Engine on VPN Gateway
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# =============================================================================
# API URL (your DO App Platform domain)
# =============================================================================
API_URL=https://api.yourdomain.com

# =============================================================================
# Database (copy from DO App Platform → Settings → Environment Variables)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@your-db-host:25060/defaultdb?sslmode=require

# =============================================================================
# Redis (copy from DO Managed Redis connection string)
# =============================================================================
REDIS_URL=rediss://default:password@your-redis-host:25061

# =============================================================================
# Encryption Key (must match API - copy from DO App Platform secrets)
# =============================================================================
ENCRYPTION_KEY=your-fernet-encryption-key

# =============================================================================
# SIP Configuration
# =============================================================================
# UCM6302 IP address (accessible via VPN tunnel)
SIP_SERVER=192.168.150.10
SIP_PORT=5060
# Local SIP port (must not conflict with UCM)
LOCAL_SIP_PORT=5061

# =============================================================================
# RTP Port Range
# =============================================================================
RTP_PORT_START=10000
RTP_PORT_END=20000

# =============================================================================
# S3/DO Spaces Configuration
# =============================================================================
S3_ENDPOINT=nyc3.digitaloceanspaces.com
S3_ACCESS_KEY=your-spaces-access-key
S3_SECRET_KEY=your-spaces-secret-key
S3_BUCKET=sip-dialer-audio
S3_SECURE=true

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
