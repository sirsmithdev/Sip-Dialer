# SIP Dialer - Droplet Environment Configuration
# Copy this file to .env and fill in your values
#
# DO NOT commit .env to version control!

# =============================================================================
# DOMAIN (for SSL certificate)
# =============================================================================
DOMAIN=sip-dialer.yourdomain.com

# =============================================================================
# DigitalOcean Managed PostgreSQL
# =============================================================================
# Format: postgresql+asyncpg://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://doadmin:REPLACE_ME@your-db-cluster-do-user-xxxxx-0.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# =============================================================================
# DigitalOcean Managed Redis/Valkey
# =============================================================================
# Format: rediss://default:password@host:port (note: rediss for SSL)
REDIS_URL=rediss://default:REPLACE_ME@your-redis-cluster-do-user-xxxxx-0.valkey.db.ondigitalocean.com:25061

# =============================================================================
# DigitalOcean Spaces (S3-compatible storage)
# =============================================================================
S3_ENDPOINT=nyc3.digitaloceanspaces.com
S3_ACCESS_KEY=REPLACE_ME
S3_SECRET_KEY=REPLACE_ME
S3_BUCKET=sip-dialer-audio
S3_BUCKET_RECORDINGS=sip-dialer-recordings
S3_REGION=nyc3

# =============================================================================
# Security Keys (generate with: openssl rand -base64 32)
# =============================================================================
JWT_SECRET_KEY=REPLACE_ME_WITH_RANDOM_32_CHAR_STRING
ENCRYPTION_KEY=REPLACE_ME_WITH_BASE64_FERNET_KEY

# =============================================================================
# OpenAI API Key (for Voice Agent)
# =============================================================================
OPENAI_API_KEY=sk-REPLACE_ME

# =============================================================================
# Optional: Droplet IP (for reference)
# =============================================================================
# DROPLET_IP=xxx.xxx.xxx.xxx
